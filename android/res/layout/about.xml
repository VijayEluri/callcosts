<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingRight="6dp"
              android:paddingLeft="6dp">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.11"
                    android:singleLine="true"
                    android:gravity="center_vertical|left"
                    android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

            <TextView
                    android:text="Version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/version"
                    android:layout_alignLeft="@id/version"
                    android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/build_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2012.11.09"
                    android:singleLine="true"
                    android:gravity="center_vertical|left"
                    android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

            <TextView
                    android:text="Build time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/build_time"
                    android:layout_alignLeft="@id/build_time"
                    android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="Metrics"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:gravity="center_vertical">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/parsing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 ms"
                    android:singleLine="true"
                    android:gravity="center_vertical|left"
                    android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

            <TextView
                    android:text="Rule file parsing time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/parsing"
                    android:layout_alignLeft="@id/parsing"
                    android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            >

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:gravity="center_vertical">

            <TextView
                    android:id="@+id/calculation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123 ms"
                    android:singleLine="true"
                    android:gravity="center_vertical|left"
                    android:textAppearance="?android:attr/textAppearanceLarge"></TextView>

            <TextView
                    android:text="Calculation time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calculation"
                    android:layout_alignLeft="@id/calculation"
                    android:textAppearance="?android:attr/textAppearanceSmall"></TextView>
        </RelativeLayout>
    </LinearLayout>

    <TextView
            style="?android:attr/listSeparatorTextViewStyle"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:text="Development options"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:clickable="true">

        <TextView
                android:id="@+id/clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean cache"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left"
                android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
    </RelativeLayout>
</LinearLayout>