<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.anzix.callcost"
          android:installLocation="auto"
          android:versionCode="1212011200" android:versionName="1.11">
    <uses-sdk android:minSdkVersion="3" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <application android:label="@string/app_name" android:icon="@drawable/icon"
                 android:theme="@android:style/Theme.Holo"
                 android:name="net.anzix.callcost.CallCostApplication"
            >
        <activity android:name="CostActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="CallLogActivity" android:label="@string/callog"/>
        <activity android:name="AboutActivity" android:label="@string/about"/>
        <activity android:name="PlanActivity" android:label="@string/offer"/>
        <activity android:name="MyPreferencesActivity" android:label="@string/preferences"/>
    </application>
</manifest> 
